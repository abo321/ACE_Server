#! /usr/bin/expect -f

spawn ./server22d
expect -exact "$ input command >"
send -- "s\r"
expect -exact "main::start"
expect -exact "in Handler()"
exec ./client 2>/dev/null
after 1000
exec ./client 2>/dev/null
expect -exact "exit MyTask2::svc()"
expect -exact "main::end"
expect -exact "$ input command >"
send -- "q\r"